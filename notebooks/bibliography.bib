month = {dec},
number = {1},
pages = {127},
title = {{Revisit linear regression-based deconvolution methods for tumor gene expression data}},
url = {https://genomebiology.biomedcentral.com/track/pdf/10.1186/s13059-017-1256-5?site=genomebiology.biomedcentral.com http://genomebiology.biomedcentral.com/articles/10.1186/s13059-017-1256-5},
